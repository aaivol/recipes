<p id="notice"><%= notice %></p>

<h1><%= t '.users_' %></h1>
<br/><br/>

<table>
  <thead>
  <tr>
    <th><h2><%= t 'session.login.name' %></h2></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><h4><%= user.username %></h4></td>
      <td><%= link_to t('.link_show'), user %></td>
      <% if current_user == user %>
        <td><%= link_to t('.link_update'), edit_user_path(user) , style:"margin-left: 20px;"%></td>
        <td><%= link_to t('.link_destroy'), user, method: :delete,
                        data: { confirm: 'Are you sure?' } , style:"margin-left: 20px;"%></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br/><br/><br/>

<h2><%= link_to t('.log_page'), session_login_url, class: 'text-danger'%></h2>
<br/>
<h2><%= link_to t('both.to_recipes'), posts_url, class: 'text-danger'%></h2>
